rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read access for market data
    match /market_predictions/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
    }
    
    // Public read access for stock data
    match /stocks/{ticker} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      
      // Allow nested document access for forecasts
      match /forecasts/{horizon} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      }
    }
    
    // Public read access for economic calendar
    match /calendar/{date} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
    }
    
    // Public read access for learning content
    match /guides/{section} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      
      // Allow nested document access
      match /{document=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      }
    }
    
    // ML weights - only Cloud Functions can read/write
    match /weights/{horizon} {
      allow read: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
    }
    
    // Historical factors - only Cloud Functions can write
    match /historical_factors/{horizon} {
      allow read: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      
      // Allow nested collections
      match /{ticker}/{document=**} {
        allow read: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
        allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
      }
    }
    
    // User-specific data (favorites, settings, etc.)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User favorites
      match /favorites/{ticker} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User settings
      match /settings/{setting} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User notification preferences
      match /notifications/{preference} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // System configuration - only admins/functions
    match /config/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.firebase.identities["service_account"] != null;
    }
    
    // Default deny for any other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}